{
  "compilerOptions": {
    "alwaysStrict": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "DOM",
      "esnext"
    ],
    "newLine": "lf",
    "target": "es2017",
    "outDir": "./dist",
    "preserveConstEnums": true,
    "removeComments": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "strict": true,
    "strictNullChecks": false
  },
  "include": [
    "src/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*-spec.ts"
  ]
}
